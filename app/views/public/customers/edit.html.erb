<div class="container">
  <h5><strong>会員情報編集</strong></h5>

  <div class="row">

    <div class="col-lg">
      <%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>

      <label>氏名</label>　　　　　　　　<label><%= f.text_field :last_name %>　　　<%= f.text_field:first_name %></label>
      <br/>
      <label>カナ</label>　　　　　　　　<label><%= f.text_field :last_name_kana %>　　　<%= f.text_field :first_name_kana %></label>
      <br/>
      <label>郵便番号</label>　　　　　　<label><%= f.text_field :postal_code %></label>
      <br/>
      <label>住所</label>　　　　　　　　<label><%= f.text_field :address %></label>
      <br/>
      <label>電話番号</label>　　　　　　<label><%= f.text_field :telephone_number %></label>
      <br/>
      <label>メールアドレス</label>　　　<label><%= f.text_field :email %></label>
      <br/>
      <label><%= f.submit '編集内容を保存',class:"btn btn-success"%><label>　　　　　<label><%= link_to'退会する', public_customers_unsubscribe_path ,class:"btn btn-danger"%></label>
　　　<% end %>
