<div class="container">
  <h5>配送先編集</h5>

    <div class="row">
      <div class="col">
        <%= form_with model:@address,url: public_address_path(@address.id),method: :patch do |f| %>

        <div>
          <label>郵便番号（ハイフンなし）</label>
          <label><%= f.text_field :postal_code %></label>
        </div>

         <div>
          <label>住所　　　　　　　　　　</label>
          <label><%= f.text_area :address %></label>
        </div>

         <div>
          <label>宛名　　　　　　　　　　</label>
          <label><%= f.text_field :name %></label>
        </div>

        <p><%= f.submit'変更内容を保存',class:"btn btn-success"%></p>
        <% end %>
      </div>
    </div>
  </div>
