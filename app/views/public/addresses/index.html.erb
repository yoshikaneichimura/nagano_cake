<h1>Public::Addresses#index</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>

 <div>
   <h5>配送先登録・一覧</h5>

   <%= form_with model: @address,url: public_addresses_path,method: :post do |f| %>

   <p>郵便番号</p>

   <%= f.text_field :postal_code %>

   <p>住所</p>

   <%= f.text_area :address %>

   <p>宛名</p>

   <%= f.text_field :name %>

   <%= f.submit'新規登録'%>

   <% end %>

 </div>

 <div>

   <% @addresses.each do |addresses| %>

   <p>郵便番号</p>

   <p><%= addresses.postal_code %></p>

   <p>住所</p>

   <p><%= addresses.address %></p>

   <p>宛名</p>

   <p><%= addresses.name %></p>

   <p><%= link_to'編集する',edit_public_address_path(addresses.id) %></p>

   <p><%= link_to'削除する',public_address_path(addresses.id),method: :delete,"data-confim"=>"本当に削除しますか？" %></p>

   <% end %>

 </div>






