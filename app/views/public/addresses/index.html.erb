<div class="container">
   <h5>配送先登録／一覧</h5>

     <div class="row">
   <%= form_with model: @address,url: public_addresses_path,method: :post do |f| %>

         <div>
         <label>郵便番号（ハイフンなし）　 </label>
         <label><%= f.text_field :postal_code %></label>
         </div>

         <div>
         <label>住所　　　　　　　　　　　</label>
         <label><%= f.text_area :address %></label>
         </div>

         <div>
         <label>宛名　　　　　　　　　　　</label>
         <label><%= f.text_field :name %></label>
         </div>

         <%= f.submit'新規登録',class:"btn btn-success"%>

         <% end %>

          </div>

 <div class="row">

   <% @customer.addresses.each do |address| %>

   <div>
    <h6></h6>
    <table class="table table-striped">
       <thead>
         <tr>
           <th>郵便番号</th>
           <th>住所</th>
           <th>宛名</th>
           <th><th>
           <th><th>
         </tr>
       </thead>
       <tbody>
         <tr>
           <td>〒 <%= address.postal_code %></td>
           <td><%= address.address %></td>
           <td><%= address.name %></td>
           <td><%= link_to'編集する',edit_public_address_path(address.id),class:"btn btn-success" %></td>
           <td><%= link_to'削除する',public_address_path(address.id),method: :delete,"data-confim"=>"本当に削除しますか？",class:"btn btn-danger"  %></td>
         </tr>
         <% end %>
       </tbody>
    </table>
  </div>
</div>
</div>






