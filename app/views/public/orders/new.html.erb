<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<h1>注文情報入力画面</h1>

<h5>支払方法</h5>

<%= form_with model: @orders,url: public_orders_comfirm_path,method: :post do |f| %>

<p><%= f.radio_button :payment_method, Order.payment_methods.key(0) %></p>
<p><%= f.label:payment_method,Order.payment_methods_i18n[:credit_card] %></p>

<p><%= f.radio_button :payment_method, Order.payment_methods.key(1) %></p>
<p><%= f.label:payment_method,Order.payment_methods_i18n[:transfer] %></p>

<h5>お届け先</h5>

<p><%= f.radio_button :select_address, 0 %></p>
<p><%= f.label :address,"ご自身の住所"%></p>

<p><%= @customer.postal_code %><%= @customer.address %><%= @customer.last_name %><%= @customer.first_name %></p>

<p><%= f.radio_button :select_address, 1 %></p>
<p><%= f.label :address,"登録済み住所から選択"%></p>

<p><%= f.select :address_id, options_from_collection_for_select(Address.all,:id,:address_display )%></p>

<p><%= f.radio_button :select_address, 2 %></p>
<p><%= f.label :address,"新しいお届け先"%></p>


<p>郵便番号(ハイフンなし)</p>
<p><%= f.text_field :postal_code %></p>

<p>住所</p>
<p><%= f.text_area :address %></p>

<p>宛名</p>
<p><%= f.text_field :name %></p>

<p><%= f.submit '確認画面へ進む'%></p>

<% end %>





