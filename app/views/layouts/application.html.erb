<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if customer_signed_in? %>
    <header style="background-color: lime;">
    <% elsif admin_signed_in? %>
    <header style="background-color: pink;">
    <% else %>
    <header style="background-color: grey;">
    <% end %>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <h1>LOGO<i class="fa-solid fa-strawberry"></i></h1>

          <button class="navbar-toggler" type="button" data-toggle="collapse"data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item"style="padding-right: 50px;">
              <% if customer_signed_in? %>
              <%= link_to"マイページ",public_customer_path(current_customer) ,class:"btn btn-success" %>
              <% elsif admin_signed_in? %>
              <%= link_to"商品一覧",admin_items_path ,class:"btn btn-white" %>
              <% else %>
              <%= link_to"About",public_homes_about_path ,class:"btn btn-white" %>
              <% end %>
            </li>

            <li class="nav-item"style="padding-right: 50px;">
              <% if admin_signed_in? %>
              <%= link_to"会員一覧",admin_customers_path ,class:"btn btn-white" %>
              <% else %>
              <%= link_to"商品一覧",public_items_path ,class:"btn btn-success" %>
              <% end %>
            </li>

            <li class="nav-item"style="padding-right: 50px;">
              <% if customer_signed_in? %>
              <%= link_to"カート",public_cart_items_path,class:"btn btn-success" %>
              <% elsif admin_signed_in? %>
              <%= link_to"注文履歴一覧",admin_orders_path,class:"btn btn-white" %>
              <% else %>
              <%= link_to "新規登録",new_customer_registration_path,class:"btn btn-white" %>
              <% end %>
            </li>

            <li class="nav-item"style="padding-right: 50px;">
              <% if customer_signed_in? %>
              <%= link_to "ログアウト",destroy_customer_session_path,method: :delete ,class:"btn btn-success" %>
              <% elsif admin_signed_in? %>
              <%= link_to"ジャンル一覧",admin_genres_path,class:"btn btn-wite" %>
              <% else %>
              <%= link_to "ログイン",new_customer_session_path,class:"btn btn-white" %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if admin_signed_in? %>
              <%= link_to "ログアウト",destroy_customer_session_path,method: :delete ,class:"btn btn-white" %>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
      <div>
        <nav>
          <ul>
            <li>ADEMIN</li>
            <li><%= link_to"管理者トップページ",admin_orders_path %></li>
            <li><%= link_to"管理者ログイン",new_admin_session_path %></li>
            <li><%= link_to"商品一覧",admin_items_path  %></li>
            <li><%= link_to"会員一覧",admin_customers_path %></li>
            <li><%= link_to"ジャンル一覧",admin_genres_path %></li>
            <li><%= link_to"TOP",public_homes_top_path %></li>


          </ul>
          </nav>
        </div>
      </header>
      <main>
        <%= yield %>
      </main>
    <% if customer_signed_in? %>
    <footer style="background-color: lime;" >
    <% elsif admin_signed_in? %>
    <footer style="background-color: pink;" >
    <% else %>
    <footer style="background-color: grey;" >
    <% end %>
    <div class="container">
      <h5 class="text white">footer</h5>
    </div>
    </footer>
  </body>
</html>
