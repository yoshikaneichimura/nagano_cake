<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="background-color: pink;">
      <div class="container">
        <div class="row">
          <div class="col-4">
            <h1>ADEMIN</h1>
          </div>
          <div class="col-8">
            <nav class="navbar">
              <ul class="navbar navbar">
                <li class="nav-item">
                  <%= link_to"商品一覧",admin_items_path ,class:"btn btn-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to"会員一覧",admin_customers_path ,class:"btn btn-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to"注文一覧",admin_orders_path,class:"btn btn-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to"ジャンル一覧",admin_genres_path,class:"btn btn-white" %>
                </li>
                  <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "ログアウト",destroy_admin_sessionn_path,method: :delete ,class:"btn btn-white" %>
                </li>
                  <% else %>
                <li class="nav-item">
                  <%= link_to "ログイン",new_admin_session_path,class:"btn btn-white" %>
                </li>
                  <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </header>
    <main>

      <div class="container">

        <div class="row">

          <div class="col">



<h1>管理者トップページ</h1>

<h2>注文履歴一覧画面</h2>

<% @orders.each do |order| %>

<p>会員ID</p>

  <%= order customer_id %> <p>FK</p>

<p>配送先郵便番号</p>

  <%= order.postal_code %>

<p>配送先住所</p>

  <%= order.address %>

<p>配送先氏名</p>

  <%= order.name %>

<p>送料</p>

  <%= order.shipping_cost %>

<p>請求額</p>

  <%= order.order_price %>

<p>支払方法</p>

  <%= order.payment_method %>

<p>受注ステータス</p>

  <%= order.status %>

<% end %>

          </div>

        </div>

      </div>

    </main>

  </body>

</html>