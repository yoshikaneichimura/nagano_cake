<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <main>

      <div class="container">

        <div class="row">

          <div class="col">

<h1>商品を追加</h1>

  <%= form_with model: @item,method: :post, url: admin_items_path do |f| %>

  <p>ジャンル</p>

  <p><%= f.collection_select :genre_id, Genre.all, :id,:name %></p>

  <p>画像</p>

  <p><%= f.file_field :image,accept:"image/*" %></p>

  <p>商品名</p>

  <p><%= f.text_field :name %></p>

  <p>説明</p>

  <p><%= f.text_area :introduction %></p>

  <p>金額</p>

  <p><%= f.text_field :price %></p>

  <p>販売状況</p>

  <p><%= f.submit'追加' %></p>

  <% end %>

          </div>

        </div>

      </div>

    </main>

  </body>
  
<html>

