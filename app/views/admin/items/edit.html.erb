<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <main>
      <div class="container">
        <div class="row">
          <div class="col">
            <h1>商品編集</h1>

            <%= form_with model:@item,url: admin_item_path(@item.id), method: :patch do |f| %>

            <p>画像</p>
            <p><%= f.file_field :image,accept:"image/*" %></p>

          　<p>商品名</p>
          　<p><%= f.text_field :name %></p>

            <p>商品説明</p>
            <p><%= f.text_area :introduction %></p>

            <p>ジャンル</p>
            <p><%= f.collection_select :genre_id, Genre.all, :id,:name %></p>

            <p>税抜価格</p>
            <p><%= f.text_field :price %></p>

            <p>販売ステータス</p>
            <p><%= f.select :is_active,[['販売中',true],['売り切れ',false]] %></p>

            <p><%= f.submit'保存'%></p>

            <% end %>

          </div>
        </div>
      </div>
    </main>
  </body>
</html>