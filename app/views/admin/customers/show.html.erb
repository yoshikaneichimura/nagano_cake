<div class="container">
  <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>

    <div class="row">

      <div class="col-lg">
      <label>会員ID</label>　　　　　　　<label><%= @customer.id %></label>
      <br/>
      <label>氏名</label>　　　　　　　　<label><%= @customer.last_name %><%= @customer.first_name %></label>
      <br/>
      <label>フリガナ</label>　　　　　　<label><%= @customer.last_name_kana %><%= @customer.first_name_kana %></label>
      <br/>
      <label>メールアドレス</label>　　　<label><%= @customer.email %></label>
      <br/>
      <label>郵便番号</label>　　　　　　<label><%= @customer.postal_code %></label>
      <br/>
      <label>住所</label>　　　　　　　　<label><%= @customer.address %></label>
      <br/>
      <label>電話番号</label>　　　　　　<label><%= @customer.telephone_number %></label>
      <br/>
      <label>会員ステータス</label>　　　<label><%= @customer.is_active ? '有効':'退会'%></label>
      <br/>
      <%= link_to'編集する',edit_admin_customer_path(@customer.id),class:"btn btn-success" %>
      </div>

    </div>
</div>

