
  <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>

    <div class="row">

      <div class="col-lg">
        <%= form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch do |f| %>

          <label>会員ID</label>　　　　　　　<label><%= f.text_field :id %></label>
          <br/>
          <label>氏名</label>　　　　　　　　<label><%= f.text_field :last_name %>　<%= f.text_field :first_name %></label>
          <br/>
          <label>フリガナ</label>　　　　　　<label><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></label>
          <br/>
          <label>メールアドレス</label>　　　<label><%= f.text_field :email %></label>
          <br/>
          <label>郵便番号</label>　　　　　　<label><%= f.text_field :postal_code %></label>
          <br/>
          <label>住所</label>　　　　　　　　<label><%= f.text_field :address %></label>
          <br/>
          <label>電話番号</label>　　　　　　<label><%= f.text_field :telephone_number %></label>
          <br/>
          <label>会員ステータス</label>　　　<label><%= f.select :is_active,[['有効',true],['退会',false]] %></label>
          <br/>
          <%= f.submit'変更を保存',class:"btn btn-success" %>

        <% end %>
        </div>

    </div>

</div>


